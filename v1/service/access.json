{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.hackfed.org/v1/service/access.json",
  "title": "Organization Access Service",
  "description": "Access control and maintainer information for an organization",
  "type": "object",
  "properties": {
    "maintainers": {
      "type": "array",
      "description": "List of organization maintainers",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "github",
              "email"
            ],
            "description": "Type of maintainer identifier"
          },
          "username": {
            "type": "string",
            "description": "Username for GitHub type maintainers"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email address for email type maintainers"
          }
        },
        "required": [
          "type"
        ],
        "allOf": [
          {
            "if": {
              "properties": {
                "type": {
                  "enum": [
                    "github"
                  ]
                }
              }
            },
            "then": {
              "required": [
                "username"
              ]
            }
          },
          {
            "if": {
              "properties": {
                "type": {
                  "const": "email"
                }
              }
            },
            "then": {
              "required": [
                "email"
              ]
            }
          }
        ],
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "additionalProperties": false
}